            android:textColor="#44109F"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            tools:text="@string/player_zero_value"

            android:onClick='@{ ()->gameViewModel.onClickedCellAt(0, 2) }'
            >


        </TextView>

